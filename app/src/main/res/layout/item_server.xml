<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/serverOSIcon"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:contentDescription="@string/Icon_Server"
        app:srcCompat="@drawable/ic_baseline_wifi_48" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Test Server" />

        <TextView
            android:id="@+id/serverAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="127.0.0.1:12345" />
    </LinearLayout>

    <ImageView
        android:id="@+id/serverVerifyStatus"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_not_verified_48"
        tools:ignore="ImageContrastCheck" />

</LinearLayout>